<div id="progress_bar">
  <div class="bg-gradient-to-r from-blue-600 to-blue-800 py-5 px-6">
    <h2 class="text-xl font-bold text-white flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <%= t(".title") %>
    </h2>
    <p class="text-blue-100 text-sm mt-1">
      <%= t(".import_started", time: bulk_import.created_at.strftime("%d/%m/%Y %H:%M")) %>
    </p>
  </div>

  <div class="p-6">
    <div class="mb-6">
      <div class="flex justify-between text-sm mb-2">
        <span class="text-gray-700 font-medium"><%= (bulk_import.processed_records.to_f / bulk_import.total_records * 100).round(2) %>% <%= t(".concluded") %></span>
        <span class="text-blue-600 font-medium"><%= bulk_import.processed_records %> de <%= bulk_import.total_records %></span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-4 overflow-hidden">
        <div class="bg-blue-600 h-full rounded-full transition-all duration-500 ease-out" style="width: <%= (bulk_import.processed_records.to_f / bulk_import.total_records * 100).round(2) %>%"></div>
      </div>
    </div>

    <div class="grid grid-cols-4 gap-4 mb-6">
      <div class="bg-blue-50 p-4 rounded-lg border border-blue-100 transition-all hover:shadow-md">
        <div class="flex items-center justify-between">
          <p class="text-sm text-gray-500"><%= t(".processed_lines") %></p>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
        </div>
        <p class="text-2xl font-bold text-blue-700 mt-2">
          <%= bulk_import.processed_records %> / <%= bulk_import.total_records %>
        </p>
      </div>

      <div class="bg-gray-50 p-4 rounded-lg border border-gray-200 transition-all hover:shadow-md">
        <div class="flex items-center justify-between">
          <p class="text-sm text-gray-500"><%= t(".lines_remaining") %></p>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <p class="text-2xl font-bold text-gray-700 mt-2">
          <%= bulk_import.total_records - bulk_import.processed_records %>
        </p>
      </div>

      <div class="bg-green-50 p-4 rounded-lg border border-green-100 transition-all hover:shadow-md">
        <div class="flex items-center justify-between">
          <p class="text-sm text-gray-500"><%= t(".successful_records") %></p>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <p class="text-2xl font-bold text-green-700 mt-2">
          <%= bulk_import.success_records %>
        </p>
      </div>

      <div class="bg-red-50 p-4 rounded-lg border border-red-100 transition-all hover:shadow-md">
        <div class="flex items-center justify-between">
          <p class="text-sm text-gray-500"><%= t(".failed_records") %></p>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <p class="text-2xl font-bold text-red-700 mt-2">
          <%= bulk_import.error_records %>
        </p>
      </div>
    </div>
  </div>
</div>